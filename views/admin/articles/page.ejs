<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/homenavbar.ejs") %>

<body>
    <div class="container mt-4">
        <hr>
        <% result.articles.rows.forEach(article => {%>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Read</a>
                </div>
            </div>
            <br>
        <% }) %>

        <% if(result.page > 1) { %>
            <a type="button" style="float:left" class="btn btn-dark" href="/articles/page/<%= result.page - 1 %>"><< Previous</a> 
        <% } else if(result.page == 1) { %>   
            <a type="button" style="float:left" class="btn btn-dark" href="/">Home</a>
        <% } %>   

        <% if(result.next) { %>
            <a type="button" style="float:right" class="btn btn-dark" href="/articles/page/<%= result.page + 1 %>">Next >></a>    
        <% } %>
    </div>
</body>

<%- include ("../../partials/footer.ejs") %> 