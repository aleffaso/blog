<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container text-center">
    <hr>
    <h2>Articles</h2>
    <a class="btn btn-success" href="/admin/articles/new">Create new article</a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => {%>
            <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td><a class="btn btn-warning" href="/admin/articles/edit/<%= article.id %>">Edit</a></th>
                    <form method="POST" action="/articles/delete" onsubmit=deleteCheck(event,this)>
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <td><button class="btn btn-danger">Delete</button></td>
                    </form>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include ("../../partials/footer.ejs") %>
