<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Create article</h2>
        </div>
        <div class="card-body">
            <form action="/categories/save" method="POST">
                <input class="form-control" type="text" name="title" placeholder="Define the article title"> <br>
                <textarea class="form-control" placeholder="Write your article here" name="body" id="article"></textarea> <br>
                <button class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>

<%- include ("../../partials/footer.ejs") %>

<script>
    tinymce.init({
        selector: "#article",
        plugins:
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    });
</script>