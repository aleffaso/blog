<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container text-center">
    <hr>
    <h2>Categories</h2>
    <a class="btn btn-success" href="/admin/categories/new">Create new category</a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => {%>
                <tr>
                    <td><%- category.id %></td>
                    <td><%- category.title %></td>
                    <td><%- category.slug %></td>
                    <td><a class="btn btn-warning" href="/admin/categories/edit/<%= category.id %>">Edit</a></th>

                    <form method="POST" action="/categories/delete" onsubmit=deleteCheck(event,this)>
                        <input type="hidden" name="id" value="<%= category.id %>">
                        <td><button class="btn btn-danger">Delete</button></td>
                    </form>

                </tr>
                <% }) %>
        </tbody>
    </table>
</div>

<%- include ("../../partials/footer.ejs") %>
