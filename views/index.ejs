<%- include ("partials/header.ejs") %>
<%- include ("partials/homenavbar.ejs") %>

<body>
    <div class="container mt-4">
        <hr>
        <div class="jumbotron text-center">
            <h1 class="display-4">Welcome</h1>
            <p class="lead">This is a simple blog that I built</p>
            <hr class="my-4">
            <p>I hope you can find what you're looking for</p>
          </div>
        
        <% articles.forEach(article => {%>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Read</a>
                </div>
            </div>
            <br>
            <% }) %>

    </div>
</body>

